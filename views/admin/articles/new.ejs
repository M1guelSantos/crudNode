<%- include('../../partials/header.ejs'); %>
    <%- include('../../partials/navbar.ejs'); %>

        <div class="container">
            <hr>
            <div class="card">
                <div class="card-header">
                    <h2>Novo Artigo</h2>
                </div>
            <div class="card-body">
                <form method="POST" action="/categories/save">
                    <input class="form-control" type="text" name="title" placeholder="defina o titulo do artigo">
                    <br/>
                    <textarea class="form-control" placeholder="Escreva o artigo aqui" name="body" id="article"></textarea>
                    <br/>
                    <button class="btn btn-primary">Enviar</button>
                </form>
            </div>
            </div>
        </div>

 <%- include('../../partials/footer.ejs'); %> 

 <script src="/tinymce/tinymce.min.js"></script>

 <script>

    tinymce.init({
        selector: "#article",
        plugins: [
            'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'
        ]
    })

 </script>